<%layout("/layouts/boilerplate")%> 
<div class="filters-row">
  <div id="filters">
    <div class="filter mt-3" data-category="Trending">
      <div class><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter mt-3" data-category="Rooms">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter mt-3" data-category="Iconic Cities">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter mt-3" data-category="Mountains">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter mt-3" data-category="Castles">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter mt-3" data-category="Amazing Pools">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter mt-3" data-category="Camping">
      <div><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter mt-3" data-category="Farms">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter mt-3" data-category="Arctic">
      <div><i class="fa-solid fa-snowman"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter mt-3" data-category="Desert">
      <div><i class="fa-solid fa-stroopwafel"></i></div>
      <p>Desert</p>
    </div>
    <div class="filter mt-3" data-category="Sea view">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Sea view</p>
    </div>
  </div>

  <div class="tax-toggle mt-3">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<div id="listings-container" class="row row-cols-3 mt-4">
  <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id%>" class="listing-link">
      <div class="card col listing-card">
        <div style="position: relative;">
         <!-- <img src="<%=listing.image.url %>?t=<%= Date.now() %>" class="card-img-top" alt="listing_image" style="height: 20rem"> -->
              <img src="<%=listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
         <% if(listing.category && listing.category.includes('Trending')) { %>
            <div class="trending-badge">
              <i class="fa-solid fa-fire"></i> TRENDING
            </div>
          <% } %>
        </div>
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
            <i class="tax-info"> &nbsp;+ 18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  // Tax toggle functionality
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo) {
      if(info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });

  // Filter functionality
  const filterButtons = document.querySelectorAll('.filter');
  let activeFilter = null;

  filterButtons.forEach(filter => {
    filter.addEventListener('click', async () => {
      const category = filter.getAttribute('data-category');
      
      // Toggle active state
      if (activeFilter === category) {
        // Clicking the same filter again - reset to show all
        activeFilter = null;
        filter.classList.remove('active-filter');
        await loadAllListings();
      } else {
        // Remove active class from all filters
        filterButtons.forEach(f => f.classList.remove('active-filter'));
        // Add active class to clicked filter
        filter.classList.add('active-filter');
        activeFilter = category;
        await filterListings(category);
      }
    });
  });

  async function filterListings(category) {
    try {
      const response = await fetch(`/listings/filter?category=${encodeURIComponent(category)}`);
      const data = await response.json();
      
      if (data.success) {
        displayListings(data.listings);
      }
    } catch (error) {
      console.error('Filter error:', error);
    }
  }

  async function loadAllListings() {
    try {
      const response = await fetch('/listings/filter');
      const data = await response.json();
      
      if (data.success) {
        displayListings(data.listings);
      }
    } catch (error) {
      console.error('Load error:', error);
    }
  }

  function displayListings(listings) {
    const container = document.getElementById('listings-container');
    
    if (listings.length === 0) {
     container.innerHTML = '<div class="col-12 text-center mt-5"><h4>No listings found</h4></div>';
       return;
    }
    
    container.innerHTML = listings.map(listing => `
      <a href="/listings/${listing._id}" class="listing-link">
        <div class="card col listing-card">
          <div style="position: relative;">
            <img src="${listing.image.url}" class="card-img-top" alt="listing_image" style="height: 20rem">
${listing.category && listing.category.includes('Trending') ? '<div class="trending-badge"><i class="fa-solid fa-fire"></i> TRENDING</div>' : ''}
          </div>
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b>${listing.title}</b><br>
              &#8377;${listing.price.toLocaleString("en-IN")} /night
              <i class="tax-info" style="display: ${taxSwitch.checked ? 'none' : 'inline'}"> &nbsp;+ 18% GST</i>
            </p>
          </div>
        </div>
      </a>
    `).join('');
  }
</script>

<style>
  .filter {
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .filter:hover {
    opacity: 0.7;
  }
  
  .active-filter {
    border-bottom: 2px solid #fe424d;
    padding-bottom: 0.5rem;
  }

  .trending-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: linear-gradient(135deg, #ff6b6b 0%, #ff4757 100%);
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-weight: bold;
    font-size: 0.75rem;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    gap: 5px;
    animation: pulse 2s infinite;
  }

  .trending-badge i {
    color: #ffd93d;
    animation: flicker 1.5s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes flicker {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
</style>























